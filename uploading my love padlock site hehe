  <script>
    let pin = '';
    function press(num) {
      if (pin.length < 4) {
        pin += num;
        document.getElementById('box' + pin.length).innerText = num;
      }
    }

    function clearPin() {
      pin = '';
      for (let i = 1; i <= 4; i++) {
        document.getElementById('box' + i).innerText = '';
      }
      document.getElementById('message').innerText = '';
    }

    function checkPin() {
      if (pin === '1411') {
        document.getElementById('message').innerText = 'Date? ðŸ’–';
      } else {
        document.getElementById('message').innerText = 'Oops! Wrong PIN ðŸ˜¢';
      }
    }
  </script>

